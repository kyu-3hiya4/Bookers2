<div>
<%= flash[:notice] %>
</div>

<%= render 'list', user: @user, book: @hon %>

<h2>Book detail</h2>

<table>
 <tbody>
  <tr>
  <td><%= link_to user_path(@book.id) do %>
      <P><%= image_tag @book.user.get_profile_image(100,100) %><br>
         <%= @book.user.name %></p>
         <% end %></td>

  <td><%= link_to book_path(@book.id) do %>
         <%= @book.title %>
         <% end %></td>
     <td><%= @book.body %></td>
         <th colspan="3"></th>

  <td><%= link_to "Edit",edit_book_path(@book.id) %></td>
  <td><% if @book.user == current_user %>
       <%= link_to "Destroy", book_path(@book), method: :delete %>
       <% end %></td>
  </tr>
 </tbody>
 </table>





