<h1>Editing Book</h1>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

 <label for="Title">Title</label>
 <br>
 <%= f.text_field :title %>
 <br>

 <label for="book body">Opinion</label>
 <br>
 <%= f.text_area :body %>

 <br>
 <%= f.submit 'Update Book' %>
 <br>

 <span>
 <%= link_to "show", book_path(@book.id) %>
</span>
|
<a href = "/books">Back</a>

 <% end %>


