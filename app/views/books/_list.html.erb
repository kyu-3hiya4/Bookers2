<h2>Userinfo</h2>
<%= image_tag user.get_profile_image(100,100) %><br>

<table>
 <tbody>
  <tr>
  <th>name</th>
  <th><%= link_to current_user.name %></th>
  </tr>

  <tr>
  <th>introduction</th>
  <th><%= link_to current_user.introduction</th>

  <th colspan="3"></th>
  </tr>
 </tbody>

 <% if user == current_user %>
 <P><%= link_to <i class="fa-solid fa-user-gear"></i>, edit_user_path(user) %></P>
 <% else %>
 <P><%= link_to <i class="fa-solid fa-user-gear"></i>, user_path(current_user.id) %></P>
 <% end %>


<h1>New book</h1>

<%= form_with model:book, url: '/books', method: :post do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>

<br>
<%= f.submit 'create Book' %>

<% end %>