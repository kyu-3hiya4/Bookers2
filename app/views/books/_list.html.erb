<h2>User info</h2>

<%= image_tag user.get_profile_image(100,100) %><br>

<table class="table">
 <tbody>
  <tr>
  <th>name</th>
  <th><%= user.name %></th>
  </tr>

  <tr>
  <th>introduction</th>
  <th><%= user.introduction %></th>

  <th colspan="3"></th>
  </tr>
  </tbody>
</table>

<div class="row">
 <% if user == current_user %>
 <P><%= link_to edit_user_path(user) do %>
      <i class="fa-solid fa-user-gear"></i></P>
 <% end %>
 <% else %>
 <P><%= link_to user_path(current_user.id) do %>
      <i class="fa-solid fa-user-gear"></i></P>
 <% end %>
 <% end %>
</div>


<h2 class="mt-3">New book</h2>

<%= form_with model: book, url: '/books', method: :post do |f| %>

<div class="form-group">
<label for="title">Title</label><br>
<%= f.text_field :title %>
</div>

<div class="form-group">
<label for="opinion">Opinion</label><br>
<%= f.text_area :body %>
</div>

<br>
<%= f.submit 'create Book' %>

<% end %>