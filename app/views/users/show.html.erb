<%= render 'books/list', user: @user, book: @book %>

<h2>Books</h2>

<table>
 <thead>
  <tr>
  <th>Title</th>
  <th>Opinion</th>
  <th colspan="3"></th>
  </tr>
 </thead>

 <tbody>

    <% @books.each do |book| %>
   <tr>
     <td><%= image_tag @user.get_profile_image(100,100) %></td>

     <td><%= link_to book_path(book.id) do %>
         <%= book.title %>
         <% end %></td>
     <td><%= book.body %></td>
     </tr>
    <% end %>
  </tbody>
</table>
