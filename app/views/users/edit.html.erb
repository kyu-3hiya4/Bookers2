<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
<h2>User info</h2>

<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
 <div class="form-group">
 <label for="inputName">Name</label><br>
 <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%><br>
 </div>

 <div class="form-group">
 <label for="inputImage">Image</label><br>
 <%= f.file_field :profile_image, placeholder: "Profile_image", accept: "image/*" %><br>
 </div>

 <div class="form-group">
 <label for="inputIntroduction">Introduction</label><br>
 <%= f.text_area :introduction %><br>
 </div>

 <div class="form-group">
 <%= f.submit "Update User", class: "btn btn-md btn-secondary" %>
 </div>
 <% end %>
    </div>
   </div>
  </div>